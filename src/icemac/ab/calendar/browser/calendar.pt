<tal:i18n i18n:domain="icemac.addressbook">
  <div id="timezone">
    <span i18n:translate="">Time zone</span>:
    <a tal:attributes="href view/time_zone_prefs_url"
       tal:content="view/time_zone_name" />
  </div>
  <div id="calendar"
       tal:attributes="class view/css_class">
    <div class="menu">
      <ul>
        <li>
          <a tal:attributes="href python:view.menu_url('month');
                             class python:view.selected_css_class('month')"
             i18n:translate="">Month</a>
        </li>
        <li>
          <a tal:attributes="href python:view.menu_url('year');
                             class python:view.selected_css_class('year')"
             i18n:translate="">Year</a>
        </li>
      </ul>
    </div>
    <div tal:replace="structure view/render_form" />
    <div tal:replace="structure view/render_calendar" />
  </div>
</tal:i18n>